generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  first_name String
  last_name String
  email String @unique
  password String
  movies Movie[]

  @@map("users")
}

model Movie {
  id Int @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  name String
  genra String
  user_id Int
  user User @relation(fields: [user_id], references: [id])

  @@map("movies")
}